{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "paths": {
            "app/*": [
                "./src/app/*"
            ],
            "config/*": [
                "./src/config/*"
            ],
            "db/*": [
                "./src/db/*"
            ],
            "helpers/*": [
                "./src/helpers/*"
            ],
            "services/*": [
                "./src/services/*"
            ],
            "utils/*": [
                "./src/utils/*"
            ],
        }
    },
    "lib": [
        "es2015"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}